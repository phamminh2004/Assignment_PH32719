<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UpdateNhanVien">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="SỬA THÔNG TIN NHÂN VIÊN"
        android:textColor="#267ED4"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_manv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt"
        android:hint="Nhập mã nhân viên"
        android:paddingLeft="15dp"
        android:textColor="#808080"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_tennv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt"
        android:hint="Nhập tên nhân viên"
        android:paddingLeft="15dp"
        android:textColor="#808080"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_pbnv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt"
        android:hint="Nhập phòng ban"
        android:paddingLeft="15dp"
        android:textColor="#808080"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edt"
        android:text="SUBMIT"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:backgroundTint="@null" />
</LinearLayout>